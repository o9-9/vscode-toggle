{
  "name": "vscode-toggle",
  "displayName": "VSCode Toggle",
  "version": "2.0.0",
  "description": "Quickly toggles excluded (hidden) files visibility in the file explorer",
  "categories": [
    "Other"
  ],
  "keywords": [
    "explorer",
    "files",
    "hidden",
    "exclude",
    "show",
    "toggle"
  ],
  "homepage": "https://github.com/o9-9/vscode-toggle/blob/master/README.md",
  "bugs": {
    "url": "https://github.com/o9-9/vscode-toggle/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/o9-9/vscode-toggle.git"
  },
  "license": "SEE LICENSE IN LICENSE",
  "author": {
    "name": "o9",
    "email": "o9@o9ll.com"
  },
  "publisher": "o9-9",
  "main": "./dist/toggle-excluded.js",
  "browser": "./dist/browser/toggle-excluded.js",
  "scripts": {
    "analyze:bundle": "webpack --mode production --env analyzeBundle",
    "analyze:deps": "webpack --env analyzeDeps",
    "build": "webpack --mode development",
    "bundle": "webpack --mode production",
    "clean": "npx rimraf dist out .vscode-test .vscode-test-web .eslintcache* tsconfig*.tsbuildinfo",
    "lint": "biome lint . --fix",
    "package": "vsce package --yarn",
    "package-pre": "yarn run patch-pre && yarn run package --pre-release",
    "patch-pre": "node ./scripts/applyPreReleasePatch.js",
    "pretty": "biome check --write",
    "pub": "vsce publish --yarn",
    "pub-pre": "vsce publish --yarn --pre-release",
    "rebuild": "yarn run reset && yarn run build",
    "reset": "yarn run clean && yarn --frozen-lockfile",
    "update-dts": "pushd \"src/@types\" && npx vscode-dts dev && popd",
    "update-dts:master": "pushd \"src/@types\" && npx vscode-dts master && popd",
    "vscode:prepublish": "yarn run bundle",
    "watch": "webpack --watch --mode development",
    "web": "vscode-test-web --extensionDevelopmentPath=. --folder-uri=vscode-vfs://github/o9-9/vscode-toggle",
    "web:serve": "npx serve --cors -l 5000",
    "web:tunnel": "npx localtunnel -p 5000"
  },
  "contributes": {
    "commands": [
      {
        "command": "vscodetoggle.show",
        "title": "Show Excluded Files",
        "category": "Files",
        "icon": "$(eye)"
      },
      {
        "command": "vscodetoggle.restore",
        "title": "Hide Excluded Files",
        "category": "Files",
        "icon": "$(eye-closed)"
      },
      {
        "command": "vscodetoggle.toggle",
        "title": "VSCode Toggle",
        "category": "Files"
      }
    ],
    "configuration": [
      {
        "id": "vscodetoggle",
        "title": "VSCode Toggle",
        "order": 10,
        "properties": {
          "vscodetoggle.explorer.enabled": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "Specifies whether to show the toggle button in the Explorer view",
            "scope": "window"
          },
          "vscodetoggle.statusBar.enabled": {
            "type": "boolean",
            "default": true,
            "markdownDescription": "Specifies whether to show the toggle button in the status bar",
            "scope": "window"
          },
          "vscodetoggle.outputLevel": {
            "type": "string",
            "default": "errors",
            "enum": [
              "silent",
              "errors",
              "verbose",
              "debug"
            ],
            "enumDescriptions": [
              "Logs nothing",
              "Logs only errors",
              "Logs all errors, warnings, and messages",
              "Logs all errors, warnings, and messages with extra context useful for debugging"
            ],
            "markdownDescription": "Specifies how much (if any) output will be sent to the _Toggle Excluded_ output channel",
            "scope": "window"
          }
        }
      }
    ],
    "keybindings": [
      {
        "command": "vscodetoggle.toggle",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "filesExplorerFocus"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "vscodetoggle.show",
          "when": "vscodetoggle:loaded && !vscodetoggle:toggled"
        },
        {
          "command": "vscodetoggle.restore",
          "when": "vscodetoggle:loaded && vscodetoggle:toggled"
        }
      ],
      "view/title": [
        {
          "command": "vscodetoggle.show",
          "group": "navigation@21",
          "when": "view == 'workbench.explorer.fileView' && vscodetoggle:loaded && !vscodetoggle:toggled && config.vscodetoggle.explorer.enabled"
        },
        {
          "command": "vscodetoggle.restore",
          "group": "navigation@21",
          "when": "view == 'workbench.explorer.fileView' && vscodetoggle:loaded && vscodetoggle:toggled && config.vscodetoggle.explorer.enabled"
        }
      ]
    }
  },
  "activationEvents": [
    "onStartupFinished"
  ],
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@types/node": "20.14.10",
    "@types/vscode": "1.72.0",
    "@vscode/test-web": "^0.0.56",
    "@vscode/vsce": "2.29.0",
    "circular-dependency-plugin": "5.2.2",
    "clean-webpack-plugin": "4.0.0",
    "esbuild": "0.23.0",
    "esbuild-loader": "4.2.0",
    "fork-ts-checker-webpack-plugin": "9.0.2",
    "terser-webpack-plugin": "5.3.10",
    "ts-loader": "9.5.1",
    "typescript": "5.5.3",
    "webpack": "5.92.1",
    "webpack-bundle-analyzer": "4.10.2",
    "webpack-cli": "5.1.4"
  },
  "packageManager": "yarn@1.22.22+sha512.a6b2f7906b721bba3d67d4aff083df04dad64c399707841b7acf00f6b133b7ac24255f2652fa22ae3534329dc6180534e98d17432037ff6fd140556e2bb3137e",
  "engines": {
    "vscode": "^1.72.0"
  },
  "icon": "images/icon.png",
  "badges": [
    {
      "description": "Join us in the #vscode-toggle channel",
      "url": "https://img.shields.io/badge/vscode--dev--community-toggle--excluded--files-blue.svg?logo=slack&labelColor=555555",
      "href": "https://vscode-slack.amod.io"
    }
  ],
  "galleryBanner": {
    "color": "#56098c",
    "theme": "dark"
  },
  "preview": false,
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    }
  },
  "sponsor": {
    "url": "https://github.com/sponsors/o9-9"
  }
}
